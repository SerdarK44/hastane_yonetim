<Page x:Class="hastane_odev.Pages.IstatistikPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="İstatistikler">

    <Grid Background="#f5f5f5" Margin="30">
        <UniformGrid Columns="2" Rows="2" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border Background="#3498db" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="👥 Toplam Hasta" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtToplamHasta" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#e67e22" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="🚨 Acil Kuyruğu" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtAcilSayi" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#2ecc71" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="📆 Bugünkü Muayene" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtBugunMuayene" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#9b59b6" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="🔍 Arama Verisi" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtBSTToplam" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </Grid>
</Page>
