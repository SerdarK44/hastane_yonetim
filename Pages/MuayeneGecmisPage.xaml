<Page x:Class="hastane_odev.Pages.MuayeneGecmisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Muayene Geçmişi">

    <Grid Background="#f5f5f5" Margin="30">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#bdc3c7" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="📂 Muayene Geçmişi" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="T.C. Kimlik No:"/>
                <TextBox x:Name="txtTCKN" Margin="0,5,0,10"/>

                <Button Content="Geçmişi Getir" Width="150" Height="35" Background="#3498db" Foreground="White"
                        FontWeight="Bold" Click="BtnGetir_Click" HorizontalAlignment="Left" Margin="0,0,0,20"/>

                <ListBox x:Name="lstGecmis" Height="350"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
